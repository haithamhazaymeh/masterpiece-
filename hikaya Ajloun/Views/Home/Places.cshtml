@model Tuple<List<hikaya_Ajloun.Models.place>, List<hikaya_Ajloun.Models.Category>>



@{
    ViewBag.Title = "Places";
    Layout = "~/Views/Shared/Navbar and footer 1.cshtml";
}


<!--Breadcrumb Start-->
<div class="pq-breadcrumb pq-breadcrumb-places pq-bg-dark pq-bg-img-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="pq-breadcrumb-title mt-5">
                        <h1>Places to visit in Ajloun</h1>
                    </div>
                    <div class="pq-breadcrumb-container">
                        <ol class="breadcrumb align-items-center">
                            <li class="breadcrumb-item"><a href="main-home.html"><i class="fa fa-home me-2"></i>Home</a></li>
                            <li class="breadcrumb-item active">Our Services</li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<!--Breadcrumb End-->
<!-- places to viste start -->
<section class="pq-pb-190">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="pq-grid-container">
                    <div class="pq-filters">
                        <div class="filters pq-filter-button-group">
                            <ul>
                                @foreach (var item in Model.Item2)
                                {
                                    if (item.categoryName == "All")
                                    {
                                        <li class="active pq-filter-btn" data-filter="*">@item.categoryName</li>

                                    }


                                }


                                @{

                                    int x = 0;
                                }

                                @foreach (var item in Model.Item2)
                                {
                                    x++;
                                    if (item.categoryName != "All")

                                    {
                                        <li class=" pq-filter-btn" data-filter=".@item.categoryName">@item.categoryName</li>

                                    }
                                    if (x == 6)
                                    {
                                        break;
                                    }

                                }
                            </ul>
                        </div>
                    </div>
                    <div class="pq-grid" data-next_items="2" data-initial_items="4">

                        @foreach (var item in Model.Item1)
                        {
                            <div class="pq-grid-item pq-filter-items pq-col-6  pq-crop-img  @item.Category.categoryName ">
                                <div class="pq-portfoliobox-2">
                                    <div class="pq-portfolio-img">
                                        <a href="/places/Places?id=@item.placeId">
                                            <img src="~/Images/Places/@item.placeImage1" alt="">
                                        </a>
                                    </div>
                                    <div class="pq-portfolio-info">
                                        <div class="pq-portfolio-link">
                                            <a href="portfolio-single.html">@item.Category.categoryName</a>
                                        </div>
                                        <h5><a href="/places/Places?id=@item.placeId">@item.placeName</a></h5>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- places to viste End -->
