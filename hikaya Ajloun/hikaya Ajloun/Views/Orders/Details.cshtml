            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.AspNetUser.Email)</td>
                <td>@Html.DisplayFor(model => model.AspNetUser.Email)</td>
            </tr>

        </table>



        @{
            hikaya_Ajloun.Models.hikaya_AjlounEntities3 db1 = new hikaya_Ajloun.Models.hikaya_AjlounEntities3();
            var orderde = db1.Order_Details.Where(x => x.Order_id == Model.orderId).ToList();
        }

        <table id="example1" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Order Count</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in orderde)
                {
                    <tr>
                        <td>@item.Product.productName</td>
                        <td>@item.Quantity</td>
                        <td><img width="25%" src="~/Images/Products/@item.Product.productImage_1" alt="Product 1"></td>
                    </tr>
                }
            </tbody>
        </table>



        <p>
            @Html.ActionLink("Back to List", "Index" ,null , new { @class = "btn btn-info" })
        </p>

