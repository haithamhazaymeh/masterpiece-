
@model hikaya_Ajloun.Models.place


@{
    Layout = "~/Views/Shared/Navbar and footer 2.cshtml";
}

<style>
    .table {
        font-size: 1rem;
    }

        .table thead th {
            font-weight: bold;
            background-color: #f5f5f5;
        }

        .table tbody tr:nth-of-type(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table tbody td {
            vertical-align: middle;
        }

            .table tbody td:first-of-type {
                font-weight: bold;
            }

            .table tbody td:nth-of-type(2) {
                width: 40%;
            }

            .table tbody td:last-of-type {
                text-align: center;
            }

        .table td {
            padding: 0.5rem 0.75rem;
        }

    .table-responsive {
        margin-top: 1rem;
    }

</style>

<!--Breadcrumb Start-->
<div class="pq-breadcrumb pq-breadcrumb-Singelplaces pq-bg-dark pq-bg-img-4">
    <div class="container">
        <div class="row align-Models-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="pq-breadcrumb-title mt-5">
                        <h1>@Model.placeName</h1>
                    </div>
                    <div class="pq-breadcrumb-container">
                        <ol class="breadcrumb align-Models-center">
                            <li class="breadcrumb-Model"><a href="main-home.html"><i class="fa fa-home me-2"></i>Home</a></li>
                            <li class="breadcrumb-Model active">Our Services</li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row mb-4 mt-5 my-5">
        <div class="col-md-6">
            <img src="~/Images/Places/@Model.placeImage1" class="img-fluid">
        </div>
        <div class="col-md-6">
            <img src="~/Images/Places/@Model.placeImage2" class="img-fluid">
        </div>
    </div>
    <div class="row mb-4 mt-5 my-5">
        <div class="col-md-6">
            <img src="~/Images/Places/@Model.placeImage3" class="img-fluid">
        </div>
        <div class="col-md-6">
            <img src="~/Images/Places/@Model.placeImage4" class="img-fluid">
        </div>
    </div>
</div>

<div class="container mt-5 mb-5 my-5">
    <h2>Place Information</h2>
    <table  id="example1" class="table table-bordered table-hover">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@Model.placeName</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@Model.description</td>
            </tr>
            <tr>
                <td>Owner</td>
                <td>@Model.owner</td>
            </tr>
            <tr>
                <td>Price per day</td>
                <td>@Model.price_per_day JOD</td>
            </tr>
            <tr>
                <td>Phone Number</td>
                <td><a href="tel:+962 @Model.phonenumber">+962 @Model.phonenumber</a></td>
            </tr>
            @*<tr>
                <td>Rating</td>
                <td>@Model.reviewid/5</td>
            </tr>*@
        </tbody>
    </table>
</div>







