                                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 mb-3">
                                            <div class="form-group">
                                                <label for="input-postcode1" class="form-label">ZIP Code <span class="required">*</span></label>
                                                <input name="ZIP_Code" value="" id="input-postcode1" type="text" class="form-control" placeholder="ZIP Code">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 mb-3">
                                            <div class="form-group">
                                                <label for="input-address-1" class="form-label">Address1</label>
                                                <input name="Adress1" value="" id="input-address-1" type="text" required="" placeholder="Address1" class="form-control">
