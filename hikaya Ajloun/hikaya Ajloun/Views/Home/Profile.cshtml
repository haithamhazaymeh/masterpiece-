@model Tuple<List<hikaya_Ajloun.Models.Order>, List<hikaya_Ajloun.Models.Order_Details>, List<hikaya_Ajloun.Models.AspNetUser>, List<hikaya_Ajloun.Models.Profile>>



@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/Navbar and footer 2.cshtml";
}

<!--Breadcrumb Start-->
<div class="pq-breadcrumb pq-breadcrumb-Product pq-bg-dark pq-bg-img-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="pq-breadcrumb-title mt-5">
                        <h1>Luxury products from Ajloun</h1>
                    </div>
                    <div class="pq-breadcrumb-container">
                        <ol class="breadcrumb align-items-center">
                            <li class="breadcrumb-item"><a href="main-home.html"><i class="fa fa-home me-2"></i>Home</a></li>
                            <li class="breadcrumb-item active">Prodcut</li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<!--Breadcrumb End-->

<div class="section login-page-in">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="nav-box mb-4">
                    <div class="profile-content">
                        <div class="d-flex align-items-center mb-4">
                            <img width="30%" class="blur-up lazyload rounded-pill" src="~/Images/Content/haitham alhazaymeh.jpg" data-image="~/Images/Content/haitham alhazaymeh.jpg" alt="" title="" />
                            <div class="detail mx-3">
                                <h3 class="text-uppercase mb-0">Haitham Hazaymeh</h3>
                                <p class="mb-0">Joined April 06, 2023</p>
                            </div>
                        </div>
                    </div>
                    <!-- Nav tabs -->
                    <ul class="nav flex-column dashboard-list" role="tablist">
                        <li><a class="nav-link active mt-5" data-bs-toggle="tab" href="#orders">Orders</a></li>
                        <li><a class="nav-link" data-bs-toggle="tab" href="#profile">Profile</a></li>
                        <li style="color:white !important ; margin:10px">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger navbar-btn navbar-link">Log out</button>
                            }
                        </li>
                    </ul>
                    <!-- End Nav tabs -->
                </div>
            </div>

            <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                <!-- Tab panes -->
                <div class="tab-content dashboard-content">
                    <!-- Orders -->
                    <div id="orders" class="product-order tab-pane fade active show">
                        <h3>Orders</h3>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="alt-font">
                                    <tr>
                                        <th>Order date</th>
                                        @*<th class="status">Status</th>*@
                                        <th>Action</th>
                                        

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.Item1.Zip(Model.Item2, Tuple.Create))
                                    {
                                        <tr>
                                            <td>@item.Item1.orderDate</td>
                                            <td><a class='btn btn-danger' href='order.aspx?id={sdr2[0]}'>view</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- End Orders -->
                    <!-- Profile -->
