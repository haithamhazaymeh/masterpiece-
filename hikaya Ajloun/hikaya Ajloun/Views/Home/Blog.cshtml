@model List<hikaya_Ajloun.Models.Article>
@using System.IO;

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/Navbar and footer 1.cshtml";
}


<!--Breadcrumb Start-->
<div class="pq-breadcrumb pq-breadcrumb-Blog pq-bg-dark pq-bg-img-2">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="pq-breadcrumb-title mt-5">
                        <h1 style="font-size: 100px;">Blog</h1>
                    </div>
                    <div class="pq-breadcrumb-container">
                        <ol class="breadcrumb align-items-center">
                            <li class="breadcrumb-item">
                                <a href="main-home.html"><i class="fa fa-home me-2"></i>Home</a>
                            </li>
                            <li class="breadcrumb-item active">Blog</li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<!--Breadcrumb End-->
<!--Left Sidebar Start-->
<section class="left-sidebar">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="pq-blog pq-blog-col-1">
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4">
                                <div class="pq-blog-post">
                                    <div class="pq-post-media">
                                        <img loading="lazy" src="~/Images/artICLE/@item.articleImage" alt="blog-img">
                                        <div class="pq-post-date">
                                            <a href="#">
                                                <span>26</span>Jan
                                            </a>
                                        </div>
                                    </div>
                                    <div style="height: 500px;" class="pq-blog-contain">
                                        <div class="pq-post-meta">
                                            <ul>
                                                <li class="pq-post-author"><i class="fa fa-user"></i>@item.author.authorname</li>
                                                <li class="pq-post-meta"><a href="#"><i class="fa fa-calendar"></i>January 2021</a></li>
                                                <li class="pq-post-tag">
                                                    <a href="#"><i class="fa fa-tag"></i>@item.Category.categoryName</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <h5 class="pq-blog-title"><a href="/Home/SingleBlog?id=@item.articleId">@item.articleName</a></h5>
                                        @using System.Text.RegularExpressions;


                                        @{
                                            string filePath = @item.articleFile;
                                            string filepath1 = Server.MapPath(filePath);
                                            string fileContent = File.ReadAllText(filepath1);
                                            string subArtical = HttpUtility.HtmlDecode(fileContent);
                                            string subArticalClean = Regex.Replace(HttpUtility.HtmlDecode(subArtical), "<.*?>", String.Empty);
                                        }

                                        <p>
                                            @if (subArticalClean.Length > 300)
                                            {
                                                @subArticalClean.Substring(0, 300) <a href="/Home/SingleBlog?id=@item.articleId">Read more</a>
                                            }
                                            else
                                            {
                                                @subArticalClean
                                            }
                                        </p>


                                        <div class="pq-btn-container">
                                            <a href="/Home/SingleBlog?id=@item.articleId" class="pq-button">
                                                <div class="pq-button-block">
                                                    <span class="pq-button-text">Read More</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }





                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="pq-pagination">
                                <nav aria-label="Page navigation">
                                    <ul class="page-numbers">
                                        <li><span aria-current="page" class="page-numbers current">1</span></li>
                                        <li><a class="page-numbers" href="#">2</a></li>
                                        <li><a class="next page-numbers" href="#">Next page</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Left Sidebar End-->
