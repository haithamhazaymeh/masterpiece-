@model hikaya_Ajloun.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;

}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registration</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Dashboard/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Dashboard/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Dashboard/dist/css/adminlte.min.css">
</head>
<body  class="hold-transition register-page">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div style="background-image: url('~/Images/Content/Ajloun stadum.jpg') !important;  background-size:cover;">
            <div class="register-box">
                <div class="card card-outline card-primary">

                    @Html.AntiForgeryToken()
                    <div class="card-header text-center">
                        <a href="~/Home/Home"><img width="35%" src="~/Images/logos/Hekayt Ajloun logo Green.png" /></a>
                    </div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="card-body">
                        <p class="login-box-msg">Register a new membership</p>

                        <form action="../../index.html" method="post">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input for="UserName" name="UserName" id="UserName" type="text" class="form-control" placeholder="Full name">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-user"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input for="Email" name="Email" id="Email" type="email" class="form-control" placeholder="Email">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input for="Password" name="Password" id="Password" type="password" class="form-control" placeholder="Password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input for="ConfirmPassword" name="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="icheck-primary">
                                            <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                            <label for="agreeTerms">
                                                I agree to the <a href="#">terms</a>
                                            </label>
                                        </div>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-default btn-block" value="Register">Register</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </div>
                        </form>

                        <div class="social-auth-links text-center">
                            <a href="#" class="btn btn-block btn-primary">
                                <i class="fab fa-facebook mr-2"></i>
                                Sign up using Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-danger">
                                <i class="fab fa-google-plus mr-2"></i>
                                Sign up using Google+
                            </a>
                        </div>

                        <a href="/Account/Login" class="text-center">I already have a membership</a>
                    </div>
                    <!-- /.form-box -->
                </div><!-- /.card -->
            </div>
        </div>
        <!-- /.register-box -->
        <!-- jQuery -->
        <script src="~/Dashboard/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/Dashboard/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/Dashboard/dist/js/adminlte.min.js"></script>
    }


    </body>
    
</html>

    

